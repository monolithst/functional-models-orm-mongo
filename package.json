{
  "name": "functional-models-orm-mongo",
  "version": "2.0.4",
  "description": "An ORM for functional-models that uses mongodb.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "prettier": "prettier --write .",
    "eslint": "eslint .",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "test:coverage": "nyc npm run test",
    "feature-tests": "./node_modules/.bin/cucumber-js -p default",
    "coverage": "nyc --all --reporter=lcov npm test",
    "build": "tsc -p ./tsconfig.build.json && cp package.json ./dist && cp README.md ./dist",
    "dist": "npm run build && cd dist && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monolithst/functional-models-orm-mongo.git"
  },
  "keywords": [
    "orm",
    "mongodb",
    "nodejs",
    "functional"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/monolithst/functional-models-orm-mongo/issues"
  },
  "author": "Mike Cornwell",
  "dependencies": {
    "functional-models": "^2.0.5",
    "functional-models-orm": "^2.1.3",
    "lodash": "^4.17.21",
    "mongodb": "^4.1.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*",
      "node_modules",
      ".nyc_output",
      "coverage",
      ".git",
      ".github",
      "features"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.16",
    "@types/lodash": "^4.17.1",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.0",
    "cucumber": "^6.0.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-functional": "^6.5.1",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.2",
    "ts-node": "^10.9.2"
  },
  "homepage": "https://github.com/monolithst/functional-models-orm-mongo#readme"
}
